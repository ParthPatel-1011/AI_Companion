# AI Companion Backend - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# LLM Provider Configuration
# Choose one: openai, groq, or anthropic
LLM_PROVIDER=groq

# API Keys (Get from respective provider websites)
# Groq: https://console.groq.com/keys (FREE & FAST - Recommended!)
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
OPENAI_API_KEY=your_openai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MongoDB Configuration
# Local: mongodb://localhost:27017/
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGO_URI=mongodb://localhost:27017/
DATABASE_NAME=AICompanionDB

# Server Configuration
HOST=127.0.0.1
PORT=8000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:8001,http://localhost:8001

# Voice Configuration
DEFAULT_VOICE_SPEED=1.0
DEFAULT_VOICE_PITCH=1.0
ENABLE_VOICE_ACTIVITY_DETECTION=true

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
